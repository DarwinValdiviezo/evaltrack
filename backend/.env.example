# ========================================
# EVALTRACK v2.0.0 - BACKEND ENVIRONMENT
# ========================================

# Application
NODE_ENV=development
PORT=3000
APP_NAME=EvalTrack v2.0

# Database
DATABASE_URL="postgresql://evaltrack_user:password@localhost:5432/evaltrack_dev"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"

# CORS
FRONTEND_URL="http://localhost:5173"

# Logging
LOG_LEVEL="debug"

# Redis (optional)
REDIS_URL="redis://localhost:6379"

