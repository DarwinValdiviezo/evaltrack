# ========================================
# CONFIGURACIÓN DE PRODUCCIÓN - API NestJS
# ========================================

# ========================================
# SERVIDOR
# ========================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ========================================
# BASE DE DATOS
# ========================================
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/nombre_db_produccion"

# ========================================
# AUTENTICACIÓN JWT
# ========================================
JWT_SECRET="tu_jwt_secret_super_seguro_produccion_cambiar_esto"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="tu_refresh_secret_produccion_cambiar_esto"
JWT_REFRESH_EXPIRES_IN="7d"

# ========================================
# CORS
# ========================================
CORS_ORIGIN="https://tu-dominio.com,https://www.tu-dominio.com"
CORS_CREDENTIALS=true

# ========================================
# LOGS Y MONITOREO
# ========================================
LOG_LEVEL="info"
LOG_FORMAT="json"

# ========================================
# SEGURIDAD
# ========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ========================================
# SERVICIOS EXTERNOS (OPCIONAL)
# ========================================
# EMAIL_SERVICE_API_KEY="tu_email_api_key"
# SMS_SERVICE_API_KEY="tu_sms_api_key"
# PAYMENT_GATEWAY_KEY="tu_payment_key"

# ========================================
# MONITOREO Y APM
# ========================================
# NEW_RELIC_LICENSE_KEY="tu_new_relic_key"
# DATADOG_API_KEY="tu_datadog_key"
# SENTRY_DSN="tu_sentry_dsn"

# ========================================
# CACHE (OPCIONAL)
# ========================================
# REDIS_URL="redis://localhost:6379"

# ========================================
# BACKUP Y RECUPERACIÓN
# ========================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # 2 AM diario

# ========================================
# DESARROLLO Y DEBUG
# ========================================
# DEBUG=false
# SHOW_ERROR_DETAILS=false 